<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<h2>reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <%= review.content %>
  <%= review.rating %>

  <% end %>
  </ul>





<p><%= link_to "Go back to index", restaurants_path, class: "btn btn-primary" %></p>

<p><%= link_to "write new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
